{
  "name": "hunwalk/board",
  "description": "An alert board for php and self-host enthusiasts",
  "keywords": [
    "yii2",
    "framework",
    "basic",
    "firestarter",
    "project template",
    "alert",
    "board",
    "self-host",
    "self host",
    "selfhost",
    "php"
  ],
  "type": "project",
  "license": "MIT",
  "support": {
    "issues": "https://github.com/HunWalk/board/issues?state=open",
    "source": "https://github.com/HunWalk/board"
  },
  "minimum-stability": "stable",
  "require": {
    "ext-json": "*",
    "php": ">=7.1.0",
    "yiisoft/yii2": "^2.0",
    "yiisoft/yii2-bootstrap": "~2.0.0",
    "yiisoft/yii2-swiftmailer": "~2.0.0 || ~2.1.0",
    "dektrium/yii2-user": "^0.9.14",
    "dektrium/yii2-rbac": "^1.0",
    "kartik-v/yii2-widget-colorinput": "*",
    "scrivo/highlight.php": "v9.18.1.2",
    "richardfan1126/yii2-js-register": "^0.0.1"
  },
  "require-dev": {
    "yiisoft/yii2-debug": "~2.1.0",
    "yiisoft/yii2-gii": "~2.1.0",
    "yiisoft/yii2-faker": "~2.0.0",
    "codeception/base": "~2.3.0",
    "codeception/verify": "~0.4.0",
    "codeception/specify": "~0.4.6",
    "symfony/browser-kit": ">=2.7 <=4.2.4",
    "symfony/dotenv": "^4.2",
    "symfony/var-dumper": "^5.0"
  },
  "config": {
    "process-timeout": 1800,
    "fxp-asset": {
      "enabled": false
    }
  },
  "scripts": {
    "post-install-cmd": [
      "yii\\composer\\Installer::postInstall"
    ],
    "post-create-project-cmd": [
      "yii\\composer\\Installer::postCreateProject",
      "yii\\composer\\Installer::postInstall"
    ]
  },
  "extra": {
    "yii\\composer\\Installer::postCreateProject": {
      "setPermission": [
        {
          "runtime": "0777",
          "web/assets": "0777",
          "yii": "0755"
        }
      ]
    },
    "yii\\composer\\Installer::postInstall": {
      "generateCookieValidationKey": [
        "config/web.php"
      ]
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ]
}
